@using Microsoft.AspNetCore.Http
@using System.Security.Claims

<!DOCTYPE html>
<html lang="vi" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BLOG HIỆN ĐẠI (Editor)</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #ff6b35;
            --primary-dark: #e55a2d;
            --primary-light: #ffe0d0;
            --bg: #fffaf5;
            --text: #2d1f16;
            --muted: #6c757d;
            --footer-bg: #1a1a1a;
            --card-bg: white;
        }

        [data-bs-theme="dark"] {
            --bg: #121212;
            --text: #e0e0e0;
            --card-bg: #1e1e1e;
            --footer-bg: #0f0f0f;
            --primary-light: #3a2a22;
            --muted: #aaa;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;
            transition: background 0.4s ease, color 0.4s ease;
        }

        main {
            flex: 1;
            padding: 7rem 1rem 3rem;
        }

        .navbar {
            background: linear-gradient(135deg, white, var(--primary-light)) !important;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            padding: 1.2rem 0 !important;
            transition: background 0.4s ease;
        }

        [data-bs-theme="dark"] .navbar {
            background: linear-gradient(135deg, #1e1e1e, #2a1f1a) !important;
            box-shadow: 0 4px 15px rgba(0,0,0,0.6);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary) !important;
            font-size: 1.8rem;
        }

        .nav-link {
            font-weight: 500;
            color: var(--text) !important;
            transition: color 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--primary) !important;
            }

        .avatar-img {
            width: 42px;
            height: 42px;
            object-fit: cover;
            border: 2.5px solid var(--primary);
        }

        .hover-primary:hover {
            color: var(--primary) !important;
            text-decoration: none;
        }

        .transition:hover {
            transform: translateY(-3px);
        }

        .theme-toggle {
            background: none;
            border: none;
            font-size: 1.6rem;
            cursor: pointer;
            color: var(--text);
            transition: transform 0.3s, color 0.3s;
        }

            .theme-toggle:hover {
                transform: rotate(15deg);
                color: var(--primary);
            }

        footer {
            background: var(--footer-bg);
            color: rgba(255,255,255,0.9);
            padding: 3rem 0 2rem;
            margin-top: auto;
        }

        .text-secondary {
            color: #aaa !important;
        }

        .btn-primary {
            background: var(--primary);
            border: none;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
            }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(255,107,53,0.25);
        }
    </style>
</head>
<body>

    <!-- Navbar Editor với nút toggle sáng/tối -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                BLOG HIỆN ĐẠI <span class="badge bg-primary ms-2">Editor</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#editorNavbar" aria-controls="editorNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="editorNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Editor" asp-controller="Post" asp-action="Index">
                            <i class="bi bi-journal-text me-1"></i> Bài viết
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Editor" asp-controller="Profile" asp-action="Index">
                            <i class="bi bi-person me-1"></i> Hồ sơ
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
                            <i class="bi bi-sun-fill"></i>
                        </button>
                    </li>

                    <li class="nav-item dropdown ms-3">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/avatars/@(User.FindFirst("AvatarPath")?.Value ?? "default.jpg")"
                                 class="avatar-img rounded-circle me-2" alt="Avatar" />
                            <span class="fw-medium">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="Editor" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person me-2"></i> Trang cá nhân
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Editor" asp-controller="Profile" asp-action="Edit">
                                    <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa hồ sơ
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer giống trang chủ -->
    <footer class="text-white py-5 mt-auto">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-5 col-md-6">
                    <h4 class="fw-bold mb-4 text-primary">BLOG HIỆN ĐẠI</h4>
                    <p class="text-secondary mb-4">
                        Nơi cập nhật tin tức nóng hổi, chia sẻ trải nghiệm du lịch, khám phá vẻ đẹp Hà Nội và Việt Nam. Cùng nhau khám phá thế giới nhé! ✈️🌏
                    </p>
                    <div class="d-flex gap-4">
                        <a href="https://facebook.com/" target="_blank" class="text-white opacity-75 transition"><i class="bi bi-facebook fs-3"></i></a>
                        <a href="https://github.com/" target="_blank" class="text-white opacity-75 transition"><i class="bi bi-github fs-3"></i></a>
                        <a href="https://x.com/" target="_blank" class="text-white opacity-75 transition"><i class="bi bi-twitter-x fs-3"></i></a>
                        <a href="https://linkedin.com/" target="_blank" class="text-white opacity-75 transition"><i class="bi bi-linkedin fs-3"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 col-6">
                    <h5 class="fw-bold mb-4">Liên kết</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3"><a asp-controller="Home" asp-action="Index" class="text-secondary text-decoration-none hover-primary">Trang chủ</a></li>
                        <li class="mb-3"><a asp-controller="Home" asp-action="Privacy" class="text-secondary text-decoration-none hover-primary">Chính sách bảo mật</a></li>
                        <li class="mb-3"><a href="#" class="text-secondary text-decoration-none hover-primary">Về mình</a></li>
                        <li class="mb-3"><a href="#" class="text-secondary text-decoration-none hover-primary">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 col-6">
                    <h5 class="fw-bold mb-4">Danh mục</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3"><a href="#" class="text-secondary text-decoration-none hover-primary">Tin tức</a></li>
                        <li class="mb-3"><a href="#" class="text-secondary text-decoration-none hover-primary">Du lịch Hà Nội</a></li>
                        <li class="mb-3"><a href="#" class="text-secondary text-decoration-none hover-primary">Du lịch Việt Nam</a></li>
                        <li class="mb-3"><a href="#" class="text-secondary text-decoration-none hover-primary">Mẹo du lịch</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold mb-4">Nhận tin mới</h5>
                    <p class="text-secondary small mb-3">Đăng ký để nhận tin tức và bài viết du lịch mới nhất qua email!</p>
                    <form class="input-group input-group-sm">
                        <input type="email" class="form-control bg-dark border-secondary text-white" placeholder="Email của bạn..." aria-label="Email đăng ký">
                        <button class="btn btn-primary" type="submit">Đăng ký</button>
                    </form>
                    <small class="text-muted mt-2 d-block">Chúng mình tôn trọng quyền riêng tư của bạn.</small>
                </div>
            </div>

            <div class="text-center mt-5 pt-4 border-top border-secondary">
                <small class="text-secondary">
                    © @DateTime.Now.Year BLOG HIỆN ĐẠI • Editor Panel • Xây dựng với ❤️ tại Hà Nội •
                    <a asp-controller="Home" asp-action="Privacy" class="text-secondary text-decoration-none hover-primary">Chính sách bảo mật</a>
                </small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Script toggle sáng/tối -->
    <script>
        const html = document.documentElement;
        const toggleBtn = document.getElementById('themeToggle');
        const icon = toggleBtn.querySelector('i');

        function setTheme(theme) {
            html.setAttribute('data-bs-theme', theme);
            localStorage.setItem('theme', theme);
            icon.className = theme === 'dark' ? 'bi bi-moon-fill' : 'bi bi-sun-fill';
        }

        // Load saved theme or system preference
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            setTheme(savedTheme);
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            setTheme('dark');
        }

        toggleBtn.addEventListener('click', () => {
            const current = html.getAttribute('data-bs-theme') || 'light';
            setTheme(current === 'light' ? 'dark' : 'light');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>