@model Blog.Models.User

@{
    ViewData["Title"] = "Trang cá nhân";
}

<div class="container my-5 py-4">
    <!-- Header Profile -->
    <div class="text-center mb-5">
        <div class="position-relative d-inline-block mb-4">
            <img src="~/avatars/@(Model.AvatarPath ?? "default.jpg")"
                 class="rounded-circle shadow-lg border border-4"
                 style="width: 160px; height: 160px; object-fit: cover; border-color: #ff6b35 !important; transition: all 0.3s ease;"
                 alt="@Model.FullName" />

            <!-- Badge Editor -->
            <span class="position-absolute bottom-0 end-0 badge rounded-pill px-3 py-2 shadow-sm"
                  style="background: #ff6b35; color: white; font-size: 0.95rem; transform: translate(20%, 20%);">
                Editor
            </span>
        </div>

        <h2 class="fw-bold text-primary mb-2">👤 @Model.FullName</h2>
        <p class="text-muted lead mb-1">@Model.Username</p>
        <p class="text-muted mb-4">
            <i class="bi bi-envelope me-1"></i> @Model.Email
        </p>
        <a asp-area="Editor" asp-controller="Profile" asp-action="Edit"
           class="btn btn-outline-primary btn-lg px-5 py-3 rounded-pill shadow-sm transition">
            <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa hồ sơ
        </a>
    </div>

    <div class="row g-4">
        <!-- Cột trái: Info & Thống kê -->
        <div class="col-lg-4">
            <!-- Card Info -->
            <div class="card border-0 shadow-sm mb-4 rounded-4 overflow-hidden">
                <div class="card-body text-center p-4">
                    <h5 class="fw-bold mb-4 text-primary">Thông tin cá nhân</h5>
                    <p class="mb-3"><i class="bi bi-person me-2 text-muted"></i> <strong>Username:</strong> @Model.Username</p>
                    <p class="mb-3"><i class="bi bi-envelope me-2 text-muted"></i> <strong>Email:</strong> @Model.Email</p>
                    <p class="mb-0"><i class="bi bi-shield-check me-2 text-muted"></i> <strong>Role:</strong> @Model.Role</p>
                </div>
            </div>

            <!-- Card Thống kê -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4 text-primary text-center">📊 Thống kê hoạt động</h5>
                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                        <span class="text-muted"><i class="bi bi-journal-text me-1"></i> Bài viết</span>
                        <strong class="fs-5">@(Model.Posts?.Count() ?? 0)</strong>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                        <span class="text-muted"><i class="bi bi-eye me-1"></i> Tổng lượt xem</span>
                        <strong class="fs-5">@(Model.Posts?.Sum(p => p.Views) ?? 0)</strong>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted"><i class="bi bi-chat-dots me-1"></i> Bình luận</span>
                        <strong class="fs-5">@(Model.Posts?.Sum(p => p.Comments?.Count ?? 0) ?? 0)</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột phải: Danh sách bài viết -->
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold text-primary mb-0">
                    📝 Bài viết của tôi
                </h4>
                <a asp-area="Editor" asp-controller="Post" asp-action="Create" class="btn btn-primary btn-sm px-4 rounded-pill">
                    <i class="bi bi-plus-lg me-1"></i> Viết bài mới
                </a>
            </div>

            @if (Model.Posts != null && Model.Posts.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var post in Model.Posts.OrderByDescending(p => p.CreatedAt))
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden transition">
                                @if (!string.IsNullOrEmpty(post.ImagePath))
                                {
                                    <img src="~/images/@post.ImagePath"
                                         class="card-img-top"
                                         alt="@post.Title"
                                         style="height: 180px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                        <i class="bi bi-image text-muted fs-1"></i>
                                    </div>
                                }

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-semibold mb-3">
                                        <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@post.PostId"
                                           class="text-decoration-none text-dark hover-primary">
                                            @post.Title
                                        </a>
                                    </h5>

                                    <div class="mt-auto">
                                        <p class="text-muted small mb-2">
                                            <i class="bi bi-folder2-open me-1"></i> @post.Category?.Name
                                        </p>
                                        <p class="text-muted small mb-3">
                                            <i class="bi bi-eye me-1"></i> @post.Views lượt xem •
                                            <i class="bi bi-chat-dots me-1"></i> @(post.Comments?.Count ?? 0)
                                        </p>

                                        <div class="d-flex gap-2">
                                            <a asp-area="Editor" asp-controller="Post" asp-action="Edit" asp-route-id="@post.PostId"
                                               class="btn btn-sm btn-outline-warning flex-fill">
                                                <i class="bi bi-pencil me-1"></i> Sửa
                                            </a>
                                            <form asp-area="Editor" asp-controller="Post" asp-action="Delete" asp-route-id="@post.PostId" method="post" class="d-inline flex-fill">
                                                <button type="submit" class="btn btn-sm btn-danger flex-fill"
                                                        onclick="return confirm('Bạn chắc chắn muốn xóa bài viết này?')">
                                                    <i class="bi bi-trash me-1"></i> Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light border text-center py-5 rounded-4 shadow-sm">
                    <i class="bi bi-journal-x fs-1 text-muted mb-3 d-block"></i>
                    <h5 class="text-muted mb-2">Chưa có bài viết nào</h5>
                    <p class="text-muted mb-0">Hãy bắt đầu viết bài tin tức hoặc chia sẻ trải nghiệm du lịch ngay hôm nay! ✍️🌴</p>
                    <a asp-area="Editor" asp-controller="Post" asp-action="Create" class="btn btn-primary btn-lg px-5 rounded-pill mt-3">
                        <i class="bi bi-plus-lg me-2"></i> Viết bài mới
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .transition {
        transition: all 0.3s ease;
    }

        .transition:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(255, 107, 53, 0.25) !important;
        }

    .rounded-circle:hover {
        transform: scale(1.08);
        box-shadow: 0 10px 30px rgba(255, 107, 53, 0.3) !important;
    }

    .btn-outline-primary {
        border-color: #ff6b35;
        color: #ff6b35;
    }

        .btn-outline-primary:hover {
            background: #ff6b35;
            color: white;
            border-color: #ff6b35;
        }

    .btn-outline-warning {
        border-color: #ff6b35;
        color: #ff6b35;
    }

        .btn-outline-warning:hover {
            background: #ff6b35;
            color: white;
            border-color: #ff6b35;
        }

    .text-primary {
        color: #ff6b35 !important;
    }

    .badge {
        background: #ff6b35 !important;
    }
</style>