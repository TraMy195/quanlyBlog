@model Blog.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

<h2>✏️ Chỉnh sửa hồ sơ</h2>

<form asp-area="Editor"
      asp-controller="Profile"
      asp-action="UpdateProfile"
      method="post"
      enctype="multipart/form-data">

    <div class="mb-3 text-center">
        <img src="~/avatars/@(Model.AvatarPath ?? "default.jpg")"
             style="width:120px;height:120px;border-radius:50%;object-fit:cover" />
    </div>

    <div class="mb-3">
        <label>Đổi avatar</label>
        <input type="file" name="avatar" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Họ tên</label>
        <input type="text"
               name="fullName"
               value="@Model.FullName"
               class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input type="email"
               name="email"
               value="@Model.Email"
               class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">💾 Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
</form>
