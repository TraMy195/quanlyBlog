@model Blog.Models.User

@{
    ViewData["Title"] = "Trang cá nhân Editor";
}

<div class="container my-5">
    <!-- Profile Header -->
    <div class="text-center mb-5">
        <div class="avatar-placeholder mx-auto mb-3 bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center shadow-sm"
             style="width: 120px; height: 120px; font-size: 3rem;">
            <i class="bi bi-person-fill text-primary"></i>
        </div>
        <h2 class="fw-bold text-primary mb-2">👤 @Model.FullName</h2>
        <p class="text-muted lead mb-1">@Model.Username</p>
        <p class="text-muted">
            <i class="bi bi-envelope me-1"></i> @Model.Email
        </p>
        <span class="badge bg-primary-subtle text-primary px-3 py-2 mt-2 fs-6">
            Editor
        </span>
    </div>

    <hr class="my-5 border-secondary-subtle" />

    <!-- Bài viết của Editor -->
    <h4 class="fw-bold mb-4 text-center text-primary">
        📝 Bài viết của Editor
    </h4>

    @if (Model.Posts != null && Model.Posts.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model.Posts
                    .Where(p => p.Status == "Công khai")
                    .OrderByDescending(p => p.CreatedAt))
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm transition">
                        @if (!string.IsNullOrEmpty(post.ImagePath))
                        {
                            <img src="~/images/@post.ImagePath"
                                 class="card-img-top"
                                 alt="@post.Title"
                                 style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted fs-1"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-semibold mb-3">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@post.PostId"
                                   class="text-decoration-none text-dark">
                                    @post.Title
                                </a>
                            </h5>

                            <div class="mt-auto">
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-folder2-open me-1"></i> @post.Category?.Name
                                </p>
                                <p class="text-muted small mb-3">
                                    <i class="bi bi-eye me-1"></i> @post.Views lượt xem
                                </p>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@post.PostId"
                                   class="btn btn-outline-primary btn-sm">
                                    Xem chi tiết <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Nếu có nhiều bài, có thể thêm phân trang hoặc nút xem thêm -->
        <!-- <div class="text-center mt-5">
            <a href="#" class="btn btn-outline-primary">Xem tất cả bài viết</a>
        </div> -->
    }
    else
    {
        <div class="alert alert-light text-center py-5 border rounded-3 shadow-sm">
            <i class="bi bi-journal-x fs-1 text-muted mb-3 d-block"></i>
            <h5 class="text-muted">Editor chưa có bài viết nào công khai</h5>
            <p class="text-muted mb-0">Hãy chờ những bài viết du lịch và tin tức thú vị từ Editor nhé! ✈️</p>
        </div>
    }
</div>

<style>
    .avatar-placeholder {
        font-size: 3.5rem;
    }

    .card {
        transition: box-shadow 0.3s ease;
        border-radius: 1rem;
    }

        .card:hover {
            box-shadow: 0 12px 32px rgba(77,171,247,0.12) !important; /* chỉ tăng shadow nhẹ, không nâng */
        }

    .btn-outline-primary {
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: #4dabf7;
            color: white;
            border-color: #4dabf7;
        }
</style>