@model Blog.Models.ViewModels.RegisterViewModel

<h2>Đăng ký</h2>

<form method="post">
    <div>
        <label>Username</label>
        <input asp-for="Username" />
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>

    <div>
        <label>Họ tên</label>
        <input asp-for="FullName" />
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>

    <button type="submit">Đăng ký</button>
</form>
